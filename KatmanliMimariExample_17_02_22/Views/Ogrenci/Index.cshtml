@model KatmanliMimariExample_17_02_22.Models.SinifModel

@{
    ViewBag.Title = "Index";
}

<div class="container">
    <div>
        <br />
        <form method="post" action="/Ogrenci/Index" class="d-inline-flex">
            <input type="search" name="name" placeholder="Arama..." class="form-control" />
            <button class="btn btn-success" type="submit">Ara</button>
        </form>
        <br />
        <hr />
        <a href="/Ogrenci/Ekle" class="btn btn-info float-right col-md-2 text-white">EKLE</a>
        <a href="/Ogrenci/Sec" class="btn btn-primary float-right col-md-2 text-white">Sınıf Seç</a>
    </div>
    <table class="table table-striped table-bordered table-hover">
        <thead class="text-center">
            <tr>
                <th>@Html.DisplayNameFor(x => x.Ogrenci.OgrenciAd)</th>
                <th>@Html.DisplayNameFor(x => x.Ogrenci.OgrenciYas)</th>
                <th>@Html.DisplayNameFor(x => x.Ogrenci.OgrenciAdres)</th>

                <th colspan="3">Action</th>
            </tr>
        </thead>
        <tbody class="text-center">
            @foreach (var item in Model.oList)
            {
                <tr>
                    <td>@item.OgrenciAd @item.OgrenciSoyad</td>
                    <td>@item.OgrenciYas.ToShortDateString()</td>
                    <td>@item.OgrenciAdres</td>
                    <td class="text-center"><a class="btn btn-info text-white" href="/Ogrenci/Detay/@item.OgrenciID">Detay</a></td>
                    <td class="text-center"><a class="btn btn-warning" href="/Ogrenci/Guncelle/@item.OgrenciID">Güncelle</a></td>
                    <td class="text-center"><a class="btn btn-danger text-white" href="/Ogrenci/Sil/@item.OgrenciID">Sil</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>
