@model KatmanliMimariExample_17_02_22.Models.SinifModel

@{
    ViewBag.Title = "Index";
}
<div class="container">
    <div>
        <br />
        <form method="post" action="/Customer/Index" class="d-inline-flex">
            <input type="search" name="name" placeholder="Arama..." class="form-control" />
            <button class="btn btn-success" type="submit">Ara</button>
        </form>
        <br />
        <hr />
        <a href="/Sinif/Ekle" class="btn btn-info float-right col-md-2 text-white">EKLE</a>
        <a href="/Sinif/Sec" class="btn btn-primary float-right col-md-2 text-white">Sınıf Seç</a>
    </div>
    <table class="table table-striped table-bordered table-hover">
        <thead class="text-center">
            <tr>
                <th>@Html.DisplayNameFor(x => x.Siniflar.SinifID)</th>
                <th>@Html.DisplayNameFor(x => x.Siniflar.Sube)</th>
                <th colspan="3">Action</th>
            </tr>
        </thead>
        <tbody class="text-center">
            @foreach (var item in Model.sList)
            {
                <tr>
                    <td>@item.SinifID</td>
                    <td>@item.Sube</td>
                    <td class="text-center"><a class="btn btn-info text-white" href="/Sinif/Detay/@item.SinifID">Detay</a></td>
                    <td class="text-center"><a class="btn btn-warning" href="/Sinif/Guncelle/@item.SinifID">Güncelle</a></td>
                    <td class="text-center"><a class="btn btn-danger text-white" href="/Sinif/Sil/@item.SinifID">Sil</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>